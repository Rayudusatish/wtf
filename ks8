# This file configures the HelloLoggingJS app which serves public web traffic.
apiVersion: apps/v1
kind: Deployment
metadata:
  name: chatmate-api-deployment
spec:
  replicas: 3
  selector:
    matchLabels:
      app: chat-mate
  template:
    metadata:
      labels:
        app: chat-mate
    spec:
      containers:
      - name: chat-mate-container
        # Replace $GOOGLE_CLOUD_PROJECT with your project ID
        image: gcr.io/$PROJECT_ID/chatmate:$SHORT_SHA-$BRANCH_NAME
        # This app listens on port 8080 for web traffic by default.
        ports:
        - containerPort: 8080
        env:
          - name: PORT
            value: "8080"
        resources:
            requests:
              cpu: 100m
              memory: 128Mi
            limits:
              cpu: 200m
              memory: 256Mi
---




# The hello-logging service provides a load-balancing proxy over the hello-logging
# pods. By specifying the type as a 'LoadBalancer', Kubernetes Engine will
# create an external HTTP load balancer.
apiVersion: v1
kind: Service
metadata:
  name: chat-mate-service
spec:
  type: LoadBalancer
  selector:
    app: chat-mate
  ports:
  - port: 80
    targetPort: 8080
 
